{{#if addCommentForm}}
  <form>
    <div class="form-group">
      <label for="text">Comment</label>
      {{input value=text id="text" placeholder="comment"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder="author"}}
    </div>

    <button {{action 'addComment' dope}}>Add A Comment</button>
  </form>
{{else}}
  {{comment.author}} -- {{comment.text}}
  <button {{action "showCommentForm"}}>Show Add Comment</button>
{{/if}}
